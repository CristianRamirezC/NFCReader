<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.FunctionsFragment">

    <Button
        android:id="@+id/test_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:visibility="gone"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:background="#664dc9"
        android:padding="20dp"
        android:text="Probar"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="29dp" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Tool Mgt v1.2"
        android:textColor="#8c72f9"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sam_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:visibility="gone"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#664dc9"
        android:padding="20dp"
        android:text="SAM"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="29dp" />

    <Button
        android:id="@+id/initialize_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#664dc9"
        android:padding="20dp"
        android:text="Inicializar"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/home_title_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="BIENVENIDO"
        android:textColor="#8c72f9"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/home_subtitle_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elija una funcion."
        android:textSize="30dp" />

    <TextView
        android:id="@+id/card_label_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informacion Tarjeta :"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/transaction_label_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informacion Transaccion :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/transaction_log_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#000000"
        android:padding="5dp"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical"
        android:text=""
        android:textColor="#66FF33"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/exit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#664dc9"
        android:padding="20dp"
        android:text="Salir"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="29dp" />

</androidx.constraintlayout.widget.ConstraintLayout>