<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.FunctionsFragment">

    <Button
        android:id="@+id/test_button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Probar"
        android:textSize="29dp"
        android:layout_marginRight="10dp"
        android:background="#664dc9"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool Mgt v1.2"
        android:textColor="#8c72f9"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/sam_button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="SAM"
        android:textSize="29dp"
        android:background="#664dc9"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.77"/>

    <Button
        android:id="@+id/custom_button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Inicializar"
        android:textSize="29dp"
        android:background="#664dc9"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"/>

    <TextView
        android:id="@+id/home_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textColor="#8c72f9"
        android:textSize="45dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/home_subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elija una funcion."
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/card_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informacion Tarjeta :"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.84"
        app:layout_constraintHorizontal_bias="0.02"/>

    <TextView
        android:id="@+id/transaction_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informacion Transaccion :"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.02"/>

    <TextView
        android:id="@+id/transaction_log_text_view"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:text="Date time: Card detect
                      \nDate time: New section = UUID
                      \nDate time: Authentication OK
                      \nDate time: Data written OK
                      \nDate time: Data save card successfull
                      \nDate time: Card off
                      \nDate time: New section = UUID
                      \nDate time: Authentication OK
                      \nDate time: Data written OK
                      \nDate time: Data save card successfull
                      \nDate time: Card off"
        android:textSize="28dp"
        android:scrollbars = "vertical"
        android:padding="5dp"
        android:textColor="#66FF33"
        android:scrollbarFadeDuration="0"
        android:visibility="invisible"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.54"
        app:layout_constraintHorizontal_bias="0.02"/>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textSize="29dp"
        android:background="#664dc9"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>